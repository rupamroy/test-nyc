{
    "compilerOptions": {
      "target": "es2017",
      "rootDir": ".",
      "baseUrl": ".",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "../dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "suppressImplicitAnyIndexErrors": true,
      "types": [
        "node",
        "jasmine"
      ]
    },
    "exclude": [
      "**/tests/*",
      "node_modules"
    ]
  }
  